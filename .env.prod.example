# .env.prod.example
DJANGO_SECRET_KEY=REEMPLAZA_CON_GENERADO
DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=api.taller.example.com,staging.taller.example.com

SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

CORS_ALLOWED_ORIGINS=https://app.taller.example.com,https://admin.taller.example.com
CSRF_TRUSTED_ORIGINS=https://app.taller.example.com,https://admin.taller.example.com

DB_ENGINE=mssql
DB_NAME=WorkshopDB
DB_USER=sa
DB_PASSWORD=REEMPLAZA
DB_HOST=tcp:192.168.3.20,50222
DB_PORT=1433
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_EXTRA_PARAMS=Encrypt=yes;TrustServerCertificate=yes

DJANGO_LOG_FILE=logs/app.jsonl
DJANGO_LOG_MAX_BYTES=10485760
DJANGO_LOG_BACKUP_COUNT=5
DJANGO_LOG_LEVEL=INFO

SENTRY_DSN=
SENTRY_TRACES=0.1
BEHIND_PROXY=1
